

{% block title %}{% endblock %}

{% block body %}
<link href="{{asset('lib/font-awesome/css/font-awesome.css')}}" rel="stylesheet" />
  <link href="{{asset('lib/advanced-datatable/css/demo_page.css')}}" rel="stylesheet" />
  <link href="{{asset('lib/advanced-datatable/css/demo_table.css')}}" rel="stylesheet" />
  <link rel="stylesheet" href="{{asset('lib/advanced-datatable/css/DT_bootstrap.css')}}" />
    
   {{ form_start(form) }} <div class="row mt">
        <div class="col-lg-12">
          <h4><i class="fa fa-angle-right"></i> Ajouter un Cours</h4>
          <div class="form-panel">
            <form role="form" class="form-horizontal style-form">
              <div class="form-group has-success">
                <label class="col-lg-2 control-label">Titre</label>
                <div class="col-lg-10">
                {{ form_widget(form.Titre, {'attr': {'class': 'form-control'}}) }}
                   <p class="help-block"></p>
                </div>
              </div>
              <div class="form-group has-success">
                <label class="col-lg-2 control-label">Description</label>
                <div class="col-lg-10">
                {{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}
                                </div>
              </div>
              <div class="form-group has-success">
                <label class="col-lg-2 control-label">Langue</label>
                <div class="col-lg-10">
                {{ form_widget(form.Langue, {'attr': {'class': 'form-control'}}) }}
                  <p class="help-block"></p>
                </div>
              </div>
                                                      
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

{% endblock %}
